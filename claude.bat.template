@echo off
REM Claude launcher for {{PROJECT_NAME}} project
REM This will create/attach to a tmux session with Claude Code

cls
echo ============================================
echo   Claude Code - {{PROJECT_NAME}}
echo ============================================
echo.
echo Project: {{PROJECT_NAME}}
echo Location: %cd%
echo Session: claude-{{SESSION_NAME}}
echo.
echo Starting Claude Code session...
echo (This will continue your most recent conversation in this project)
echo.

REM Run the launch script directly through WSL (more reliable than Windows Terminal)
wsl.exe -d Ubuntu bash {{WSL_PATH}}/launch-claude.sh

if errorlevel 1 (
    echo.
    echo Error launching Claude. Please ensure:
    echo - WSL Ubuntu is installed and running
    echo - tmux is installed in Ubuntu
    echo - Claude CLI is installed (npm install -g @claude-cli/claude)
    pause
)